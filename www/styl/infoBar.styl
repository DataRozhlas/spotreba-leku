#infoBar
  position absolute
  right 0px
  top 0px
  bottom 0px
  width 342px
  overflow auto
  padding 10px 10px 10px 14px
  background white
  background linear-gradient(to right, rgba(255,255,255,0) 0%,rgba(255,255,255,0.9) 7px,rgba(255,255,255,0.9) 100%); /* W3C */
  h2
    display none
    position absolute
    top 0px
    padding-top 10px
    left 10px
    margin 0px
    font-size 1.5em
    z-index 4
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    width 310px
    font-family 'Roboto'
    font-weight 400
    background white
    background rgba(255,255,255,0.9)
    z-index 5
    b
      font-weight 700
  .unlockNotify
    display none
    position absolute
    top 28px
    left 10px
    padding-top 9px
    width 310px
    z-index 5
    background white
    background rgba(255,255,255,0.9)
    .btn
      font-size 2em
      text-decoration none
      padding-right 10px
      position relative
      top 4px
    .content
      text-decoration underline
    &:hover
      .content
        text-decoration none
      cursor pointer
  &.detail
    h2
      display block
  &.locked
    .unlockNotify
      display block

  .items
    position relative
    width 100%
    z-index 4
    .item
      position absolute
      transition top 0.4s
      left 0px
      height 94px
      padding 10px
      width 100%
      overflow hidden
      background white
      outline 3px solid rgba(ColorHeadingLink, 0.2)
      background lighten(ColorHeadingLink, 98%)
      color #3
      &.hidden
        display none
      h3
        position absolute
        top 0px
        left 20px
        margin 0px
        line-height 40px
        font-family 'Roboto'
        font-variant small-caps
        font-weight 700
        font-size 1.3em
      .stats
        position absolute
        left 20px
        top 40px
        .stat
          float left
          &:first-child
            width 82px
            border-right 1px solid rgba(ColorHeadingLink, 0.2)
            margin-right 16px
          &:nth-child(2)
            width 67px
            border-right 1px solid rgba(ColorHeadingLink, 0.2)
            margin-right 18px

        h4
          display block
          margin 0px
          font-size 0.8em
          font-family 'Roboto'
          font-weight 400
          text-transform uppercase
        span
          display block
          float left
          clear left
          margin-top 3px
          font-family 'Roboto'
          font-size 1.3em
          font-weight 700

      canvas
        position absolute
        top 10px
        right 10px
        z-index 2
      &:hover
        outline 3px solid rgba(ColorHeadingLink, 0.5)
        cursor pointer
        background lighten(ColorHeadingLink, 95%)
      &:active
        outline 3px solid rgba(ColorHeadingLink, 0.9)
        background lighten(ColorHeadingLink, 92%)
      &.active
        background lighten(ColorHeadingLink, 94%)
        outline 3px solid rgba(ColorHeadingLink, 0.9)
        z-index 3
        h3:before
          content " "
          position absolute
          top 0px
          left -20px
          margin-left -17px
          margin-top -17px
          width 30px
          height 30px
          background rgba(ColorHeadingLink, 0.8)
          transform rotate(45deg)
          z-index 3
      &:first-child
      &:nth-child(2)
        outline 3px solid rgba(ColorHeading, 0.15)
        background lighten(ColorHeading, 99%)
        &:hover
          outline 3px solid rgba(ColorHeading, 0.4)
          cursor pointer
          background lighten(ColorHeading, 98%)
        &:active
          outline 3px solid rgba(ColorHeading, 0.9)
          background lighten(ColorHeading, 96%)
        &.active
          background lighten(ColorHeading, 98%)
          outline 3px solid rgba(ColorHeading, 0.8)
          h3:before
            background rgba(ColorHeading, 0.8)
